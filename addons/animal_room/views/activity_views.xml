<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!--ar activity tree view-->
    <record id="ar_activity_tree_view" model="ir.ui.view">
        <field name="name">ar.activity.tree</field>
        <field name="model">ar.activity</field>
        <field name="arch" type="xml">
            <tree string="Activity Tree">
                <field name="name" />
                <field name="abbreviation" />
                <field name="category_id" />
                <field name="tag_ids" widget="many2many_tags" />
            </tree>
        </field>
    </record>

    <!--ar activity form view-->
    <record id="ar_activity_form_view" model="ir.ui.view">
        <field name="name">ar.activity.form</field>
        <field name="model">ar.activity</field>
        <field name="arch" type="xml">
            <form string="Activity Form">
                <sheet>
                    <group col="1">
                        <field name="name" />
                        <field name="abbreviation" />
                        <field name="category_id" />
                        <field name="tag_ids" widget="many2many_tags" />
                    </group>
                    <notebook>
                        <page string="Measurements" name="activity_measurements">
                            <field name="measurement_ids" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>