<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!--ar cage form view-->
    <record id="ar_cage_form_view" model="ir.ui.view">
        <field name="name">ar.cage.form</field>
        <field name="model">ar.cage</field>
        <field name="arch" type="xml">
            <form string="Cage">
                <sheet>
                    <group col="1">
                        <field name="name" />
                    </group>
                    <notebook>
                        <page string="Subjects" name="cage_subjects">
                            <field name="subject_ids" readonly="True">
                                <tree>
                                    <field name="uai" />
                                    <field name="animal_number" string="Animal Name" />
                                    <field name="sex" />
                                    <field name="study_id" />
                                    <field name="alive" />
                                    <button
                                        width="100"
                                        name="move_to_subject"
                                        icon="oi-arrow-right"
                                        title="Show More"
                                        type="object"
                                        class="btn-outline-primary border-0"
                                    />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
