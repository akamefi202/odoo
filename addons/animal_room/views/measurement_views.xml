<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!--ar measurement tree view-->
    <record id="ar_measurement_tree_view" model="ir.ui.view">
        <field name="name">ar.measurement.tree</field>
        <field name="model">ar.measurement</field>
        <field name="arch" type="xml">
            <tree string="Measurement Tree">
                <field name="name" />
                <field name="abbreviation" />
                <field name="unit_id" />
            </tree>
        </field>
    </record>

    <!--ar measurement form view-->
    <record id="ar_measurement_form_view" model="ir.ui.view">
        <field name="name">ar.measurement.form</field>
        <field name="model">ar.measurement</field>
        <field name="arch" type="xml">
            <form string="Measurement Form">
                <sheet>
                    <group col="1">
                        <field name="name" />
                        <field name="abbreviation" />
                        <field name="unit_id" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>