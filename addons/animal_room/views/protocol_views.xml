<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!--study tree view-->
    <record id="ar_protocol_tree_view" model="ir.ui.view">
        <field name="name">ar.protocol.tree</field>
        <field name="model">ar.protocol</field>
        <field name="arch" type="xml">
            <tree string="Protocols">
                <field name="study_id"/>
                <field name="animal_name"/>
                <field name="animal_number_total"/>
                <field name="animal_number_per_cage"/>
                <field name="study_end_date"/>
            </tree>
        </field>
    </record>

    <!--ar protocol form view-->
    <record id="ar_protocol_form_view" model="ir.ui.view">
        <field name="name">ar.protocol.form</field>
        <field name="model">ar.protocol</field>
        <field name="arch" type="xml">
            <form string="group">
                <sheet>
                    <group col="2">
                        <group>
                            <field name="study_id" />
                            <field name="animal_name" />
                            <field name="animal_number_total" />
                            <field name="animal_number_per_cage" />
                            <field name="study_end_date" />
                            <field name="subjects_allocated" invisible="1" />
                        </group>
                        <group>
                            <field name="grouping_method" />
                        </group>
                    </group>
                    <div class="mb-4">
                        <button
                            name="allocate_subjects"
                            string="Allocate Subjects"
                            type="object"
                            class="oe_highlight mx-2 my-1"
                        />
                        <button
                            name="assign_uai"
                            string="Assign UAI"
                            type="object"
                            class="oe_highlight mx-2 my-1"
                            state="subjects_allocated == False"
                        />
                        <button
                            name="grouping_subjects"
                            string="Grouping Subjects"
                            type="object"
                            class="oe_highlight mx-2 my-1"
                        />
                    </div>

                    <notebook>
                        <page string="Subjects" name="ar_protocol_subjects">
                            <field name="subject_ids" nolabel="1" context="{'default_protocol_id': active_id}">
                                <tree editable="bottom">
                                    <field name="segment_id" string="Seq" />
                                    <field name="group_id" />
                                    <field name="animal_name" />
                                    <field name="uai" />
                                    <field name="sex" />
                                    <field name="cage_id" />
                                    <button
                                        width="100"
                                        name="move_to_subject"
                                        icon="oi-arrow-right"
                                        title="Show More"
                                        type="object"
                                        class="btn-outline-primary border-0"
                                    />
                                    <control>
                                        <create name="add_subject_control" string="Add a subject"/>
                                    </control>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
