<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!--ar subject form view-->
    <record id="ar_subject_form_view" model="ir.ui.view">
        <field name="name">ar.subject.form</field>
        <field name="model">ar.subject</field>
        <field name="arch" type="xml">
            <form string="Subject Form">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button
                            name="move_to_bodyweight"
                            string="Bodyweight"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-server"
                        />
                        <button
                            name="move_to_food"
                            string="Food"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-server"
                        />
                        <button
                            name="move_to_water"
                            string="Water"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-server"
                        />
                    </div>
                    <group col="2">
                        <group>
                            <field name="cage_id" />
                            <field name="animal_name" />
                            <field name="sex" />
                        </group>
                        <group>
                            <field name="uai" />
                            <field name="study_id" />
                            <field name="alive" widget="radio" />
                            <field name="filter_category_type" invisible="1" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Records" name="subject_records">
                            <field name="filtered_record_ids" domain="[('category_name', '=', filter_category_type)]">
                                <tree editable="bottom">
                                    <field name="activity_id" />
                                    <field name="value" />
                                    <field name="write_date" string="Date &amp; Time" />
                                    <field name="user_id" />
                                    <control>
                                        <create name="add_record_control" string="Add a record"/>
                                    </control>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
