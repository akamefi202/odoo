<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!--ar subject form view-->
    <record id="ar_subject_form_view" model="ir.ui.view">
        <field name="name">ar.subject.form</field>
        <field name="model">ar.subject</field>
        <field name="arch" type="xml">
            <form string="Subject Form">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button
                            name="move_to_bodyweight"
                            string="Bodyweight"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-server"
                        />
                        <button
                            name="move_to_food"
                            string="Food"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-server"
                        />
                        <button
                            name="move_to_water"
                            string="Water"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-server"
                        />
                    </div>
                    <group col="2">
                        <group>
                            <field name="cage_id" />
                            <field name="animal_name" />
                            <field name="sex" />
                        </group>
                        <group>
                            <field name="uai" />
                            <field name="study_id" />
                            <field name="alive" widget="radio" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_subject_record_tree" model="ir.ui.view">
        <field name="name">ar.subject.records.tree</field>
        <field name="model">ar.record</field>
        <field name="priority">1000</field>
        <field name="arch" type="xml">
            <tree editable="bottom" multi_edit="1">
                <header>
<!--                    <div>Unique Animal ID:</div>-->
<!--                    <div>Associated Study:</div>-->
                </header>

                <field name="activity_id" required="1" />
                <field name="value" />
                <field name="write_date" string="Date &amp; Time" />
                <field name="user_id" widget="many2one_avatar_user" />
            </tree>
        </field>
    </record>
</odoo>
