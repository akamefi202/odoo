<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!--ar unit tree view-->
    <record id="ar_unit_tree_view" model="ir.ui.view">
        <field name="name">ar.unit.tree</field>
        <field name="model">ar.unit</field>
        <field name="arch" type="xml">
            <tree string="Unit Tree">
                <field name="name" />
                <field name="abbreviation" />
            </tree>
        </field>
    </record>

    <!--ar unit form view-->
    <record id="ar_unit_form_view" model="ir.ui.view">
        <field name="name">ar.unit.form</field>
        <field name="model">ar.unit</field>
        <field name="arch" type="xml">
            <form string="Unit Form">
                <sheet>
                    <group col="1">
                        <field name="name" />
                        <field name="abbreviation" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
