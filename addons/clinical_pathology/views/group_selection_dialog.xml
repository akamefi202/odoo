<!--Wizard For Message Box -->
<odoo>
    <record id="cp_group_selection_dialog" model="ir.ui.view">
        <field name="name">Group Selection Dialog</field>
        <field name="model">cp.group_selection_dialog</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Form" version="7.0">
                <div class="mb-2">
                    Please select groups to collect samples.
                </div>
                <field name="study_group_ids" colspan="4" nolabel="1" />
                <separator colspan="4" />
                <footer>
                    <button name="select_group" type="object" string="OK" class="oe_highlight"/>
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="cp_group_selection_dialog_action" model="ir.actions.act_window">
        <field name="name">Group Selection Dialog</field>
        <field name="res_model">cp.group_selection_dialog</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>