<!--Wizard For Message Box -->
<odoo>
    <record id="cp_group_selection_dialog" model="ir.ui.view">
        <field name="name">Subject Selection Dialog</field>
        <field name="model">cp.subject_selection_dialog</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Form" version="7.0">
                <div class="mb-2">
                    Please select subjects to collect samples.
                </div>
                <field name="subject_ids" colspan="4" nolabel="1">
                    <tree create="0" delete="0">
                        <field name="id" string="Sample ID" />
                        <field name="sex" string="Sex" />
                        <field name="group_id" string="Group" />
                        <field name="alive" string="Mortality" />

                        <control>
                            <create name="add_subjects" string="Add subjects"/>
                        </control>
                    </tree>
                </field>
                <separator colspan="4" />
                <footer>
                    <button name="select_subject" type="object" string="OK" class="oe_highlight"/>
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="cp_subject_selection_dialog_action" model="ir.actions.act_window">
        <field name="name">Subject Selection Dialog</field>
        <field name="res_model">cp.subject_selection_dialog</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>